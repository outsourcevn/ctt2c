    <script>
        $(document).ready(function () {
            function onChange() {

            }

            function onChangeStart(e) {
                $("#datepicker").kendoDatePicker({
                    min: new Date($("#datepickerStart").val()),
                });
            }

            $("#datepicker").kendoDatePicker({
                change: onChange
            });

            $("#datepickerStart").kendoDatePicker({
                change: onChangeStart
            });

