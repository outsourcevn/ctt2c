<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/adminLte3/plugins/font-awesome/css/font-awesome.min.css">
        <!-- Ionicons -->
        <link rel="stylesheet" href="~/lib/ionicons/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/adminLte3/dist/css/adminlte.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
        <link href="~/css/custom.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="~/adminLte3/plugins/font-awesome/css/font-awesome.min.css" asp-append-version="true">
        <!-- Ionicons -->
        <link rel="stylesheet" href="~/lib/ionicons/css/ionicons.min.css" asp-append-version="true">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/adminLte3/dist/css/adminlte.min.css" asp-append-version="true">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
        <link href="~/css/custom.min.css" rel="stylesheet" asp-append-version="true"/>
    </environment>
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition login-page">
    @RenderBody()

    <environment include="Development">
        <script src="~/adminLte3/plugins/jquery/jquery.min.js"></script>
        <script src="~/adminLte3/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/toastr/toastr.min.js" asp-append-version="true"></script>
        <script src="~/adminLte3/dist/js/common.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/adminLte3/plugins/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.1/bootstrap.min.js"
                asp-fallback-src="~/adminLte3/plugins/bootstrap/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous">
        </script>
        <script src="~/lib/toastr/toastr.min.js" asp-append-version="true"></script>
        <script src="~/adminLte3/dist/js/common.min.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)

</body>
</html>
