            content += new Date(data.model.OnPublished).format("dd/mm/yyyy");
            content += '<br />';
            content += '<br />';
            content += data.model.Content;
            content += '<br />';
            content += '<br />';
            content += '<p class="blockquote-footer" style="text-align:right;">- ' + data.model.UserFullName + ' -</p >';
            $('#detail-news').html(content);
        });

