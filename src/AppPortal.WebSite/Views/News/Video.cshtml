                    <div class="right">
                        <ul id="tin-moi-content"></ul>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-md-12">
            <section class="block block_business_news">
                <h3 class="block_title_black">TIN XEM NHIỀU<a href="#" class="view_all"><span><span>Tất cả tin</span></span></a></h3>
                <div class="content">
                    <div class="right">
                        <ul id="tin-xem-nhieu-content"></ul>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
