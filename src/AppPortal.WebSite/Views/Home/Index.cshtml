                animation: "slide",
                controlNav: false,
                directionNav: false,
                animationLoop: false,
                slideshow: false,
                animationDuration: 1000,
                sync: "#block_front_carousel_video"
            });

            $('#block_front_carousel_video').flexslider({
                animation: "slide",
                controlNav: false,
                directionNav: false,
                itemWidth: 120,
                itemMargin: 50,
                animationDuration: 1000,
                asNavFor: '#block_front_slides_video'
            });
        });

    </script>

