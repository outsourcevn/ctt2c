    <script>

        $(document).ready(function () {
            getdata();
        });

        function getdata() {
            $.ajax({
                url: appConfig.apiHostUrl + "/api/news/getNewsAno",
                data: {
                    name: $("#inputName").val(),
                    mapakn: $("#inputEmail").val(),
                    sdt: $("#inputSdt").val(),
                },
                success: function (result) {
                    var dataContainer = $("#lstGopy");
                    $('#lstGopy').pagination({
                        dataSource: result,
                        pageSize: 5,
                        showGoInput: true,
                        showGoButton: true,
                        callback: function (data, pagination) {
                            var html = templateData(data, $("#inputEmail").val());
                            dataContainer.html(html);
                        }
                    })
                }
            });
        }
        function templateData(data, mapakn) {

            var html = '';
            for (var i = 0; i < data.length; i++) {
                var noidung = '';
                noidung = data[i].Name;
                var linkDetail = appConfig.current + "/home/DetailTracuu?id=" + data[i].Id;
                if (mapakn !== "" && mapakn !== undefined) {
                    linkDetail += "&mapakn=" + mapakn;
                }

                var dateTime = dateFormat(data[i].OnPublished, "dd/mm/yyyy")
                var content = '<div class="MB20" style="font-size: 14px;">';
                content += '<div class="media-object-default media-object-default1 boT">';
                content += '<div class="media">';
                content += '<div class="media-left"> <a href="' + linkDetail + '"><img class="media-object img-thumbnail img-circle" src="../../images/MediaObj_Placeholder.png" width="80" alt="placeholder image"></a> </div> <div class="media-body">';
                if (data[i].UserFullName == '') {
                    content += '<p class="text-muted" style="margin-bottom:8px;margin-top: 8px;"><a style="color: blue;" href="' + linkDetail + '">' + "Ẩn danh" + '</a> - <i class="MR5 fa fa-clock-o" aria-hidden="true"></i> ' + dateTime + '</p> <h4 class="media-heading">';
                } else {
                    content += '<p class="text-muted" style="margin-bottom:8px;margin-top: 8px;"><a style="color: blue;" href="' + linkDetail + '">' + data[i].UserFullName + '</a> - <i class="MR5 fa fa-clock-o" aria-hidden="true"></i> ' + dateTime + '</p> <h4 class="media-heading">';
                }
                content += '<a href="' + linkDetail + '" class="tieu-de-pakn">Kiến nghị về việc: ' + data[i].Name + '</a></h4>';
                content += '<p class="text-justify"><b>Nội dung kiến nghị:</b> ' + noidung + '</p>';
                content += '</div></div></div></div>';
                html += content;
            }
            return html;
        }

        $.get(appConfig.apiHostUrl + "/api/News/getHomeNewsByCate?number=3", function (data, status) {
            var content = '';
        
            for (var i = 0; i < data.model.length; i++) {
                content += '<article class="border-dot">';
                content += '<hgroup>';
                content += '<h4 class="title" ><a style="font-size:14px;" href="/home/detailnews?id=' + data.model[i].Id + '">' + data.model[i].Name + '</a></h4>';
                content += '</hgroup>';
                content += '<p class="date" style="text-align:left;">'
                content += '<time datetime="2013-01-21">'
                content += new Date(data.model[i].OnPublished).format("dd/mm/yyyy");
                content += '</time>'
                content += '</p>'
                if (data.model[i].Image != '') {
                    content += '<img alt="(Ảnh minh họa)" src="' + data.model[i].Image + '" style="BORDER: 0px solid; width:120px; height:80px; float:left; margin-right:5px">'
                }
                content += '<p class="tom-tat-news" style="line-height: 20px; color:#333;text-align:justify;">';
                content += data.model[i].Abstract;
                content += '</p>';
                content += '</article>';

            }
            $('#truyen-thong-news-content').html(content);
            $('.tom-tat-news span').css({ 'font-size': '14px' });
        });

        $.get(appConfig.apiHostUrl + "/api/Media/GetVanban?number=10" , function (data, status) {
            var content = '';
            console.log(data);
            console.log(data[0]);
            for (var i = 0; i < data.length; i++) {
                content += '<li class="last" style = "margin-top:-5px;padding-bottom: 2px;margin-bottom: 7px;font-size:12px;line-height:16px;text-align:justify;" >';
                content += '<a target="_blank" href="' + data[i].url + '"> '+(i+1)+' - ';
                content += data[i].tenvanban;
                content += '<span class="glyphicon glyphicon-download-alt"></span>';
                content += '</a>';
                content += '</li>';
            }
            $('#home-vanban').html(content);
        });
        //album anhr
        $.get(appConfig.apiHostUrl + "/api/Media/getMedia?type=image&is_publish=1", function (data, status) {
            var preview = '';
            var slide = '';
            for (var i = 0; i < data.length; i++) {
                preview += '<li>';
                preview += '<img src="' + data[i].url + '" height="430" width = "100%"/>';
                preview += '<p class="flex-caption" style="width:100%">';
                preview += data[i].description;
                preview += '</p>';
                preview += '</li>';

                slide += '<li>';
                slide += '<img src="' + data[i].url + '" />';
                slide += '</li>';
            }
            $('#home-image-preview').html(preview);
            $('#home-image-slide').html(slide);
            $('#block_front_slides').flexslider({
                animation: "slide",
                controlNav: false,
                directionNav: false,
                animationLoop: false,
                slideshow: false,
                animationDuration: 1000,
                sync: "#block_front_carousel"
            });

            $('#block_front_carousel').flexslider({
                animation: "slide",
                controlNav: false,
                directionNav: true,
                itemWidth: 120,
                itemMargin: 30,
                animationDuration: 1000,
                asNavFor: '#block_front_slides'
            });
        });
        //album, video

        $.get(appConfig.apiHostUrl + "/api/Media/getMedia?type=video&is_publish=1", function (data, status) {
            var preview = '';
            var slide = '';
            for (var i = 0; i < data.length; i++) {
                preview += '<li> <video style="width: 100%",height="100%" controls> <source src="' + data[i].url + '"> </video> <p class="flex-caption" style="width:100%;">' + data[i].description + '</p> </li>';

                slide += '<li>';
                slide += '<img src="' + data[i].filesImage + '" />';
                slide += '</li>';
            }

            $('#contentVideo').html(preview);
            $('#contentImage').html(slide);
