@using AppPortal.Core.ClaimsIdentityExtension
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Images"] = "/adminLte3";
    var userName = ((System.Security.Claims.ClaimsIdentity)User.Identity).GetSpecificClaim(System.Security.Claims.ClaimTypes.Name);
    string GroupId = HttpContextAccessor.HttpContext.Session.GetString("GroupId");

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewData["Title"] - CMS Portal - BTNMT</title>

    <environment include="Development">
        <!-- Font Awesome Icons -->
        <link rel="stylesheet" href="~/adminLte3/plugins/font-awesome/css/font-awesome.min.css">
        <!-- IonIcons -->
        <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/adminLte3/dist/css/adminlte.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
        <!-- Core CSS  -->
        @*<link href="~/lib/kendo-ui/styles/kendo.bootstrap-v4.min.css" rel="stylesheet" />*@
        <link href="~/css/custom.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <!-- Font Awesome Icons -->
        <link rel="stylesheet" href="~/adminLte3/plugins/font-awesome/css/font-awesome.min.css">
        <!-- IonIcons -->
        <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/adminLte3/dist/css/adminlte.min.css" asp-append-version="true">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
        <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />

        @*<link href="~/lib/kendo-ui/styles/kendo.bootstrap-v4.min.css" rel="stylesheet" asp-append-version="true"/>*@
        <link href="~/css/custom.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.1017/styles/kendo.common-material.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.1017/styles/kendo.material.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.3.1017/styles/kendo.material.mobile.min.css" />
    <style>
        .btn-xs {
            padding: 1px 5px !important;
            font-size: 12px !important;
            line-height: 1.5 !important;
            border-radius: 3px !important;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini sidebar-collapse" style="padding-top: 55px;">
    <div class="wrapper">
        @await Html.PartialAsync("navbar/_default")
        @await Html.PartialAsync("main-sidebar/_default")

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2 pb-2 border border-top-0 border-left-0 border-right-0">
                        <div class="col-sm-6">
                           
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">@ViewData["FeatureTitle"]</a></li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        @await Html.PartialAsync("footer/_default")
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/adminLte3/plugins/jquery/jquery.min.js"></script>
    <script>
        var username = '@userName';
        var GroupId = '@GroupId';
    </script>
    <environment include="Development">
        <!-- jQuery -->
        <script src="~/adminLte3/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="~/adminLte3/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/kendo.all.min.js"></script>
        <!-- AdminLTE -->
        <script src="~/adminLte3/dist/js/adminlte.js"></script>
        <script src="~/lib/toastr/toastr.min.js"></script>
        <!-- OPTIONAL SCRIPTS -->
        <script src="~/adminLte3/dist/js/demo.js"></script>
        <script src="~/adminLte3/dist/js/common.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
        <script src="~/adminLte3/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/kendo.all.min.js"></script>
        <!-- AdminLTE -->
        <script src="~/adminLte3/dist/js/adminlte.min.js" asp-append-version="true"></script>
        <script src="~/lib/toastr/toastr.min.js" asp-append-version="true"></script>

        <!-- OPTIONAL SCRIPTS -->
        <script src="~/adminLte3/dist/js/demo.js" asp-append-version="true"></script>
        <script src="~/adminLte3/dist/js/common.min.js"></script>
    </environment>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/eonasdan-bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/11.1.1/classic/ckeditor.js"></script>
    <script src="~/js/dungtd.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
