
@{
    ViewData["FeatureTitle"] = "Quản trị";
    ViewData["Title"] = "Ý kiến đóng góp";

    var take = (int)ViewData["take"];
    var keyword = (string)ViewData["keyword"];
    var pageNumber = (int)ViewData["page"];
    var pageSize = (int)ViewData["pageSize"];
    var categoryId = (int)ViewData["categoryId"];
    var status = (int)ViewData["status"];
    var type = (int)ViewData["type"];

    switch (status)
    {
        case 0:
            ViewData["Title"] += " Đang chờ xử lý";
            break;
        case 1:
            ViewData["Title"] += " Công bố.";
            break;
        case 2:
            ViewData["Title"] += " Tiếp nhận & Phân công";
            break;
        case 3:
            ViewData["Title"] += " Xác nhận duyệt yêu cầu";
            break;
        case 4:
            ViewData["Title"] += " Yêu cầu không hợp lệ";
            break;
        default:
            ViewData["Title"] += " đang chờ xử lý.";
            break;
    }
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">@ViewData["Title"]</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div>
                <div class="card-body" style="display: block;">
                    <div class="form-inline">
                        <div class="input-group mb-2 mr-sm-2">
                            <a asp-controller="ProcessWorks" asp-action="Create" class="btn btn-primary btn-flat"><i class="fa fa-plus"></i> Tạo ý kiến góp ý</a>
                        </div>

                        <div class="input-group mb-2 mr-sm-2">
                            <button type="button" class="btn btn-dark btn-flat" id="btn-save-dafts-new"><i class="fa fa-plus"></i> Đang xử lý (Tiếp nhận &amp; phân công)</button>
                        </div>
                        <div class="input-group mb-2 mr-sm-2">
                            <button type="button" class="btn btn-primary btn-flat" id="btn-save-process-new"><i class="fa fa-plus"></i> Xác nhận duyệt tin</button>
                        </div>
                        <div class="input-group mb-2 mr-sm-2">
                            <button type="button" class="btn btn-info btn-flat" id="btn-save-publish-new"><i class="fa fa-plus"></i> Công bố</button>
                        </div>
                        <div class="input-group mb-2 mr-sm-2">
                            <button type="button" class="btn btn-danger btn-flat" id="btn-delete-all"><i class="fa fa-close"></i> Yêu cầu không hợp lệ</button>
                        </div>

                        <div class="input-group mb-2 mr-sm-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="fa fa-search"></i></div>
                            </div>
                            <input id="txtName" type="text" placeholder="Nhập từ khóa cần tìm" class="form-control" />
                        </div>
                    </div>

                    <div id="dataGrid" class="mt-2"></div>

                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

@section Scripts{
    <script src="~/js/process/Scripts.js" asp-append-version="true"></script>
    <script type="text/javascript">
        var ngNews = {};
            ngNews = {
                lstNewsId: [],
                pageNumber: '@pageNumber',
                pageSize: '@pageSize',
                keyword: '@keyword',
                take: '@take',
                categoryId: '@categoryId',
                status: '@status',
                type: '@type'
            };
    </script>
    <script src="~/js/process/getlist.js" asp-append-version="true"></script>
}